<h1>Create an message</h1>

<%= form_for @message do |f| %>
<% unless @message.errors.empty? %>
<div class="alert alert-danger">
	<%= @message.errors.full_messages.to_sentence %>
</div>
<% end %>

<div class="form-group">
	<%= f.label :content %>
	<%= f.text_field :content, placeholder: "content", class: 'form-control' %>
</div>

<div class="form-group">
	<%= f.label :receiver_id %>
	
	<%= collection_select(:message, :receiver_id, @users_not_me, :id, :email, {:prompt => true}) %>

<%= f.hidden_field :sender_id, :value => current_user.id, class: 'form-control' %>
</div>
<%= f.submit "Send message", class: "btn btn-primary" %>
<% end %>