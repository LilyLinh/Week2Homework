<!DOCTYPE html>
<html>
  <head>
   
    <title>Finechat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag      'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
   <nav class="navbar navbar-light bg-faded">
    <a href="/" class="navbar-brand">finechat</a>

    <ul class="nav navbar-nav">
      <% if current_user %>
       <li class="nav-item">
         <%= link_to "Log out #{current_user.email}", logout_path, method: 'delete', class: 'nav-link' %>
       </li>

       <li class="nav-item">
         <%= link_to "Add friend", friendlist_new_path, class: 'nav-link' %>
      </li>

      <li class="nav-item">
         <%= link_to "Friend list", friendlists_index_path, class: 'nav-link' %>
      </li>

      <li class="nav-item">
         <%= link_to "New message", new_message_path, class: 'nav-link' %>
      </li>

      <li class="nav-item">
         <%= link_to "Message box", messages_index_path, class: 'nav-link' %>
      </li>

       <% else %>
     <li class="nav-item">
      <%= link_to "Create an Account", new_user_path, class: 'nav-link' %>
     </li>

     <li class="nav-item">
      <%= link_to "Log In", new_session_path, class: 'nav-link' %>
        <% end %>
    </ul>
  </nav>

     <% unless flash.empty? %>
      <% flash.each do |key, value| %>
        <div class="alert alert-warning"><%= value%></div>
        <% end %>
        <% end%>

    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
